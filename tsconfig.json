//ts를 어떻게 js로 컴파일할 지 말해주는 파일

{
    "compilerOptions": {
        "module":"commonjs", //node.js를 평범하게 사용하고 다양한 걸 import하거나 export할 수 있게 만든다.
        "target" : "ES2015", //어떤 버전의 자바스크립트로 컴파일 되고 싶은 지 적는다.
        "sourceMap": true,
        "outDir":"dist" //sourcemap을 하고 싶은 지
    }, 
    "include" : ["src/**/*"], 
    "exclude":["node_modules"]
}